{% import '/macro/form.html.twig' as form %}
{% extends "layout.html.twig" %}
{% block navbar %}{% set urlblog = "/" %} {% set url = "/" %} {{ parent() }}{% endblock
%}
{% block content %}
{% if session.login.userType == 'admin' %}
<header id="adminBlog" class="page-section bg-dark border-bottom mb-4 ">
  <div class="container">
    <div class="text-center mt-5">
      <h1 class="fw-bolder text-light">Administration des utilisateurs</h1>

    </div>
  </div>
</header>

<div class="container my-4 text-primary">

  <div class="mb-4 text-left d-flex justify-content-between">
    <a href="/adminBlog" class="btn btn-outline-dark" role="button" rel="noopener"><i
        class="fas fa-angle-double-left"></i> Administration du Blog</a>
        <form action="" method="get" class="form-inline">
          <div class="d-inline-flex justify-content-center align-items-center">
              <label>Statut</label><select name="status" id="status" class="form-select mx-2" aria-label="Status selected" onchange="this.form.submit()">
                <option value="" {% if status=='' %} selected {% endif %}>&nbsp;</option>
                <option value="1" {% if status=='1' %} selected {% endif %}>Actif</option>
                <option value="0" {% if status=='0' %} selected {% endif %}>Inactif</option>
                

              </select>

              <label>Type</label><select name="type" id="type" class="form-select mx-2" aria-label="Status selected" onchange="this.form.submit()">
                <option value="" {% if type=='' %} selected {% endif %}>&nbsp;</option>
                <option value="member" {% if type=='member' %} selected {% endif %}>Membre</option>
                <option value="admin" {% if type=='admin' %} selected {% endif %}>Administrateur</option>
                

              </select>
            
          </div>
        </form>
  </div>

  

  <div id="alertUser"></div>
  <div class="table-responsive mb-2">
    <table class="table ">
      <thead>
        <tr class="table-dark text-light">
          <th scope="col">#</th>
          <th scope="col">Utilisateur</th>
          <th scope="col">Email</th>
          <th scope="col">Inscrit le</th>
          <th scope="col">Dernière connexion</th>
          <th scope="col">Type</th>
          <th scope="col">Statut</th>
          <th scope="col" colspan="4" >Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
        <tr id="user-{{user.id}}">
          <th scope="row">#{{user.id}}</th>
          <td>{{ user.firstName|capitalize ~ " " ~ user.lastName|upper }}</td>
          <td>{{user.email}}</td>
          <td>{% if user.regitrationDate %}{{user.regitrationDate|date("d/m/Y H:i")}}{% endif %}</td>
          <td>{% if user.lastConnectionDate %}{{user.lastConnectionDate|date("d/m/Y H:i")}}{% endif %}</td>
          <td title="{{ user.firstName | capitalize ~ " " ~ user.lastName | capitalize }}">{{ user.userType |
            capitalize }}</td>
          <td id="status-{{user.id}}">{% if user.status == 1 %}<span class="badge badge-primary">Actif</span>{% else %}<span class="badge badge-danger">Inactif</span>{% endif %}</td>
          <td>
            <!--<a href="/user/{{user.id}}" type="button" class="btn btn-outline-primary text-center"
            rel="noopener" target="_blank" title="Voir cet utilisateur"><i class="far fa-eye" title="Voir cet utilisateur"></i></a>-->
            <a class="userShow btn btn-outline-primary text-center" href="/#userShow-{{user.id}}" data-bs-toggle="modal"
                        data-bs-target="#userShow-{{user.id}}"><i class="far fa-eye" title="Voir cet utilisateur"></i></a>
                        {% include "/backend/admin/user/userShow.html.twig" %}
        </td>
          <td id="active-{{user.id}}">
            {% if user.status == 0 %}
            <button class="formUserValidate btn btn-outline-dark" type="submit" value="{{user.id}}"
              title="Valider cet utilisateur"><i class="fas fa-check" title="Valider cet utilisateur"></i></button>
              {% else %}
              <button class="formUserDisable btn btn-outline-dark" type="submit" value="{{user.id}}"
              title="Désactiver cet utilisateur"><i class="fas fa-ban" title="Désactiver cet utilisateur"></i></button>
              {% endif %}
          </td>
          
          <td><a href="/userManagerEdit/{{user.id}}" type="button" class="btn btn-outline-secondary text-center"
              rel="noopener" title="Modifier cet utilisateur"><i class="far fa-edit"
                title="Modifier cet utilisateur"></i></a>
          </td>
          <td>

            <!--<button class="formUserDelete btn btn-outline-danger" type="submit" value="{{user.id}}"
              title="Supprimer cet utilisateur"><i class="far fa-trash-alt" title="Supprimer cet utilisateur"></i></button>-->

              <button type="button" class="deleteButton btn btn-outline-danger" href="/#delete" data-bs-toggle="modal" data-bs-target="#delete" data-id="{{user.id}}" data-title="{{ user.firstName ~ " " ~ user.lastName }}" value="{{user.id}}" ><i
                class="far fa-trash-alt" title="Supprimer cet article"></i></button>
          </td>
        </tr>
        
        {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between">
    <div>&nbsp;</div>

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
          <a class="page-link" href="/userManager?page={{ currentPage - 1 }}&status={{ status }}"
            tabindex="-1">Précédente</a>
        </li>
        {% for i in 1..AllPage %}
        <li class="page-item {% if currentPage == i %} active {% endif %}"><a class="page-link"
            href="/userManager?page={{ i }}&status={{ status }}">{{ i }}</a></li>
        {% endfor %}
        <li class="page-item {% if currentPage == AllPage %} disabled {% endif %}">
          <a class="page-link" href="/userManager?page={{ currentPage + 1 }}&status={{ status }}">Suivante</a>
        </li>
      </ul>
    </nav>

    <div>{{AllUserCounter}} utilisateurs</div>
  </div>

</div>
{% include "/backend/admin/delete.html.twig" %}

{% endif %}

{% endblock %}