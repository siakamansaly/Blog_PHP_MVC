<!-- delete post-->
<div class="delete-modal modal fade" id="delete" tabindex="-1"
    aria-labelledby="delete" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button></div>
            <div class="modal-body pb-5 mb-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12 ">
                            <div class="card text-primary mb-4">
                                <h5 class="fw-bolder text-light bg-danger py-3 rounded text-center">{{delete.title}} 
                                </h5>

                                <div class="card-body d-flex justify-content-center">
                                    <form method="post">
                                        <div id="alertDeleteConfirmation"></div>
                                        <div class="row mb-4">
                                            <div class="col text-center">
                                            <label>{{delete.subtitle}}</label>
                                        </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div id="deleteTitleConfirmation" class="col text-center fw-bold text-uppercase"></div>
                                        </div>
                                        <div class="row">
                                            <div class="col text-center"><button  class="{{delete.class}} btn btn-danger"
                                                    type="submit" id="deleteButtonConfirmation" title="{{delete.title}}" value="">Oui</button></div>

                                            <div class="col text-center"><button class="btn btn-outline-danger"
                                                    type="button" data-bs-dismiss="modal"
                                                    aria-label="Close">Non</button></div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>