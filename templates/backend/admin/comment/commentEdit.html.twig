{% import '/macro/form.html.twig' as form %}
{% extends "layout.html.twig" %}
{% block navbar %}{% set urlblog = "/" %} {% set url = "/" %}{{ parent() }}{% endblock
%}
{% block content %}
{% if session.login.userType == 'admin' %}
<header id="adminBlog" class="page-section bg-gray border-bottom mb-4">
  <div class="container">
    <div class="text-center mt-5">
      <h1 class="fw-bolder text-primary">Modifier un commentaire</h1>

    </div>
  </div>
</header>

<div class="container my-4 text-primary">
  <div class="mb-4 text-left d-flex justify-content-between">
    <a href="/commentManager?status={{comments.status}}" class="btn btn-outline-primary" role="button" rel="noopener"><i
            class="fas fa-angle-double-left"></i>  Administration des commentaires</a>
           
</div>
  <form id="formCommentEdit" method="post">
    <div id="alertCommentEdit"></div>
    <input type="hidden" name="idCommentEdit" value="{{comments.id}}"/>
    {% include "/backend/admin/comment/commentForm.html.twig" %}
    <div class="row my-4 justify-content-center">
      <div class="col"><button id="buttonCommentEdit" class="btn btn-primary w-100 " type="submit">Enregistrer mes modifications</button>
      </div>
     
    </div>
  </form>

    


</div>




{% endif %}

{% endblock %}