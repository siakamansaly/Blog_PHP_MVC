{% import '/macro/form.html.twig' as form %}
{% extends "layout.html.twig" %}
{% block navbar %}{% set urlblog = "/" %} {% set url = "/" %} {{ parent() }}{% endblock
%}
{% block content %}
{% if session.login.userType == 'admin' %}
<header id="adminBlog" class="page-section bg-gray border-bottom mb-4 ">
  <div class="container">
    <div class="text-center mt-5">
      <h1 class="fw-bolder text-primary">Administration des commentaires</h1>

    </div>
  </div>
</header>

<div class="container my-4 text-primary">

  <div class="mb-4 text-left d-flex justify-content-between">
    <a href="/adminBlog" class="btn btn-outline-success" role="button" rel="noopener"><i
        class="fas fa-angle-double-left"></i> Administration du Blog</a>

        <form action="" method="get" class="form-inline">
          <div class="d-inline-flex justify-content-center align-items-center">
            <label>Statut</label>
              <select name="status" id="status" class="form-select mx-2" aria-label="Status selected" onchange="this.form.submit()">
                <option value="0" {% if status==0 %} selected {% endif %}>En attente de validation</option>
                <option value="1" {% if status==1 %} selected {% endif %}>Approuvé</option>
                <option value="2" {% if status==2 %} selected {% endif %}>Désapprouvé</option>
              </select>
            
          </div>
        </form>
  </div>

  

  <div id="alertComment"></div>
  <div class="table-responsive ">
    <table class="table ">
      <thead>
        <tr class="table-comments text-primary">
          <th scope="col">#</th>
          <th scope="col">Commentaire</th>

          <th scope="col">Ajouté le</th>
          <th scope="col">Publié le</th>
          <th scope="col">Auteur</th>
          <th scope="col">Statut</th>
          <th scope="col" colspan="4" >Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for comment in comments %}
        <tr id="comment-{{comment.id}}">
          <th scope="row">#{{comment.id}}</th>
          <td>{{comment.content}}</td>

          <td>{{comment.dateAddComment|date("d/m/Y")}}</td>
          <td>{{comment.datePublishComment|date("d/m/Y")}}</td>
          <td title="{{ comment.firstName | capitalize ~ " " ~ comment.lastName | capitalize }}">{{ comment.firstName |
            capitalize }}</td>
          
            <td>{% if comment.status == 1 %}<span class="badge badge-primary">Approuvé</span>{% elseif comment.status == 0 %}<span class="badge badge-secondary">En attente validation</span>{% else %}<span class="badge badge-danger">Désapprouvé</span>{% endif %}</td>
          <td>
            {% if comment.status == 0 %}
            <button class="formCommentValidate btn btn-outline-dark" type="submit" value="{{comment.id}}"
              title="Valider ce commentaire"><i class="fas fa-check" title="Valider ce commentaire"></i></button>
              {% endif %}
          </td>
          <td>
            {% if comment.status == 0 %}
            <button class="formCommentDisable btn btn-outline-dark" type="submit" value="{{comment.id}}"
              title="Désapprouver ce commentaire"><i class="fas fa-ban" title="Désapprouver ce commentaire"></i></button>
              {% endif %}
          </td>
          <td><a href="/commentManagerEdit/{{comment.id}}" type="button" class="btn btn-outline-secondary text-center"
              rel="noopener" title="Modifier ce commentaire"><i class="far fa-edit"
                title="Modifier cet article"></i></a>
          </td>
          <td>

            <!--<button class="formCommentDelete btn btn-outline-danger" type="submit" value="{{comment.id}}"
              title="Supprimer ce commentaire"><i class="far fa-trash-alt" title="Supprimer ce commentaire"></i></button>-->

              <button type="button" class="deleteButton btn btn-outline-danger" href="/#delete" data-bs-toggle="modal" data-bs-target="#delete" data-id="{{comment.id}}" data-title="{{'#' ~ comment.id ~ ' - '~  comment.firstName | capitalize ~ " " ~ comment.lastName | upper }}" value="{{comment.id}}" ><i
                class="far fa-trash-alt" title="{{delete.title}}"></i></button>
          </td>
        </tr>
        {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between">


    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
          <a class="page-link" href="/commentManager?page={{ currentPage - 1 }}&status={{ status }}"
            tabindex="-1">Précédente</a>
        </li>
        {% for i in 1..AllPage %}
        <li class="page-item {% if currentPage == i %} active {% endif %}"><a class="page-link"
            href="/commentManager?page={{ i }}&status={{ status }}">{{ i }}</a></li>
        {% endfor %}
        <li class="page-item {% if currentPage == AllPage %} disabled {% endif %}">
          <a class="page-link" href="/commentManager?page={{ currentPage + 1 }}&status={{ status }}">Suivante</a>
        </li>
      </ul>
    </nav>

    <div>{{AllCommentCounter}} commentaires</div>
  </div>

</div>

{% include "/backend/admin/delete.html.twig" %}
{% endif %}

{% endblock %}